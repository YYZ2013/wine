/* 
  1.flex弹性盒布局
  2.rpx=rem
  3.如果需要动态改变样式，使用行内样式
*/
.index-container{
  display: flex;
  flex-direction: column;
  align-items: center;
}
.logo{
  width: 400rpx;
  height: 200rpx;
  margin-top: 50rpx;
}
.username{
  font-size: 32rpx;
  font-weight: 600;
  margin-top: 30rpx;
}
.btn{
  border: 1px solid #A52829;
  margin-top: 20rpx;
  padding: 15rpx;
  border-radius: 10rpx;
  background: #A52829;
}
.btn text{
  font-size: 36rpx;
  color: white;
}