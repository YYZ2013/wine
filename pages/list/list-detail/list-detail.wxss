/* pages/list/list-detail/list-detail.wxss */
.wine-img{
  width: 100%;
  height: 750rpx;
}
.wine-detail{
  background: rgba(165, 40, 41, 0.6);
  padding: 22rpx 20rpx 20rpx 22rpx;
  margin-top: -10rpx;
}
.author-icon{
  width: 90rpx;
  height: 90rpx;
  border-radius: 45rpx;
  /* 上下垂直居中   */
  vertical-align: middle;
}
.author-name{
  margin-left: 20rpx;
}
.author-date{
  opacity: 0.6;
  font-style: italic;
  margin-left: 20rpx;
}
.music{
  width: 50rpx;
  height: 50rpx;
  margin: 0 0 -8rpx 30rpx;
  z-index: 99;
}
.wine-info{
  display: flex;
  flex-direction: column;
}
.wine-brand{
  margin-top: 8rpx;
  font-family: SimHei;
  font-size: 44rpx;
  font-weight: 800;
}
.horizon{
  width: 98%;
  height: 1px;
  background: #A52829;
  vertical-align: middle;
  z-index: -99;
}
.icon{
  flex-direction: row;
  margin-left: 82%;
  margin-top: -55rpx;
}
.icon image{
  width: 50rpx;
  height: 50rpx;
  margin-left: 10rpx;
  z-index: 99;
}
.wine-introduce{
  margin-top: 4rpx;
  margin-bottom: 8rpx;
}
.price{
  margin-bottom: 8rpx;
  color: #FFFF80;
  text-decoration: line-through;
  text-decoration-color: #A52829;
}
.discount-price{
  color: yellow;
}
