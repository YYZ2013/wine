.wine-list{
  display: flex;
  flex-direction: column;
  margin: 20rpx 10rpx 20rpx 10rpx;
  background: rgba(165, 40, 41, 0.8);
  border: 4rpx solid rgba(165, 40, 41, 1);
  padding: 20rpx 10rpx 10rpx 20rpx;
}
.author-icon{
  width: 90rpx;
  height: 90rpx;
  border-radius: 45rpx;
  /* 上下垂直居中   */
  vertical-align: middle;
}
.author-name{
  font-style: italic;
  margin-left: 20rpx;
}
.author-date{
  margin-left: 20rpx;
}
.wine-brand{
  margin: 10rpx 10rpx 8rpx 0rpx;
  font-family: KaiTi;
  font-size: 46rpx;
  font-weight: 600;
}
.wine-img{
  width: 680rpx;
  height: 680rpx;
}
.introduction{
  margin-top: 10rpx;
  margin-bottom: 10rpx;
}
.price{
  margin-bottom: 10rpx;
  color: #FFFF80;
  text-decoration: line-through;
  text-decoration-color: #A52829;
}
.discount-price{
  color: yellow;
}