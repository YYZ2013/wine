/* pages/vlog/vlog-detail/vlog-detail.wxss */
@import "../star-template/star-template.wxss";

.vlog-detail-container{
  display: flex;
  flex-direction: column;
  font-size: 20rpx;
}
.head-img{
  width: 100%;
  height: 320rpx;
  -webkit-filter: blur(10px);
  filter: blur(10px);
}
.head-img-hover{
  width: 100%;
  height: 320rpx;
  position:absolute;
  top:0;
  left:0;
  display:flex;
  flex-direction: column;
}
.main-title{
  font-size: 38rpx;
  color:#fff;
  font-weight:bold;
  margin-top: 50rpx;
  margin-left: 40rpx;
  letter-spacing: 2rpx;
}
.sub-title{
  font-size: 28rpx;
  color:#fff;
  margin-left: 40rpx;
  margin-top: 30rpx;
}
.like{
  display:flex;
  flex-direction: row;
  margin-top: 30rpx;
  margin-left: 40rpx;
  font-size:28rpx;
  font-weight: bold;
}
.highlight-font{
  color: #00FF00;
  margin-right: 10rpx;
}
.plain-font{
  color: #A52829;
  margin-right: 30rpx;
}
.vlog-img{
  height:238rpx;
  width: 175rpx;
  position: absolute;
  top:160rpx;
  right: 30rpx;
}
.summary{
  margin: 40rpx 50rpx 50rpx 40rpx;
  font-size: 30rpx;
  color: #fff;
}
.original-title{
  color: #1f3463;
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 30rpx;
}
.flex-row{
  display: flex;
  flex-direction: row;
  margin-bottom: 10rpx;
}
.mark{
  margin-right: 30rpx;
  white-space: nowrap;
  color: #FFFF00;
}
.horizon{
  margin-top: 40rpx;
  height: 1px;
  width: 100%;
  background-color: #A52829;
}
.synopsis{
  display: flex;
  flex-direction: column;
  margin-top: 38rpx;
}
.synopsis-font{
  color:#FFFF00;
}
.summary-content{
  margin: 20rpx 2rpx 0rpx 2rpx;
  line-height: 40rpx;
  text-align: justify;
  letter-spacing: 1rpx;
  text-indent: 62rpx;
}
.casts{
  display:flex;
  flex-direction: column;
  margin-top:40rpx;
}
.casts-font{
  color: #FFFF00;
  margin-bottom: 30rpx;
}
.casts-imgs{
  white-space: nowrap;

}
.cast-container{
  display: inline-flex;
  flex-direction: column;
  width: 170rpx;
  margin-right: 20rpx;
  margin-left: 20rpx;
  text-align: center;
  white-space: normal;
}
.cast-img{
  width: 170rpx;
  height: 210rpx;
}
.cast-name{
  margin: 10rpx auto 0;
}
